<div class="forms">
<%= form_with(model: sacco) do |form| %>
  <% if sacco.errors.any? %>
    <div class="text-primary">
      <h2><%= pluralize(sacco.errors.count, "error") %> prohibited this sacco from being saved:</h2>

      <ul>
        <% sacco.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="flex">  

  <div style="margin-right: 20px">
    <%= form.label :name, style: "display: block; width: 200px; color: grey", class: "form-label inputs" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div>
    <%= form.label :email, style: "display: block; width: 200px; color: grey", class: "form-label inputs" %>
    <%= form.text_field :email, class: "form-control"  %>
  </div>
</div>

  <div>
    <%= form.label :created_by, style: "display: block; color: grey", class: "form-label inputs" %>
    <%= form.text_field :created_by, class: "form-control" %>
  </div>

  <div>
    <%= form.label :phone, style: "display: block; color: grey", class: "form-label inputs" %>
    <%= form.text_field :phone, class: "form-control" %>
  </div>

<div class="flex" style="width: 300px; margin: 20px 0px; text-transform: capitalize">    

  <div>
    <%= form.label :is_active, style: "display: block", class: "form-label text-primary" %>
    <%= form.check_box :is_active %>
  </div>

  <div>
    <%= form.label :is_deleted, style: "display: block", class: "form-label text-danger" %>
    <%= form.check_box :is_deleted %>
  </div>
</div>
  <div>
    <%= form.submit class:"btn btn-primary"%>
  </div>
<% end %>
</div>
